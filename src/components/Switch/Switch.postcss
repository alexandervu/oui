.oui-switch {
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
  padding: 0.24em;
  background-color: var(--surface-4th);
  border-radius: 0.625rem;

  &--vertical {
    flex-direction: column;
    justify-content: flex-start;
    align-content: stretch;
    align-items: stretch;
  }

  &--multiline {
    flex-wrap: wrap;
  }

  input {
    display: none;
  }

  .slider {
    display: block;
    position: absolute;
    z-index: 1;
    border-radius: 0.36em;
    background-color: var(--surface-2th);
    box-shadow: inset 0 1px 1px var(--surface-2th), 0 2px 3px var(--surface-3th);
    &--transition {
      transition: 0.15s ease, transform 0.25s ease-out;
    }
  }

  label {
    position: relative;
    z-index: 2;
    flex: 1 1 auto;
    align-self: auto;
    padding: 0.5em;
    border-radius: 0.36em;
    color: var(--text-secondary);
    line-height: 1.5;
    font-weight: 500;
    text-align: center;
    user-select: none;
    cursor: pointer;
  }
}
